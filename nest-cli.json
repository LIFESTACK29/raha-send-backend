{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/raha-send-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/raha-send-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/raha-send-backend",
  "projects": {
    "integration": {
      "type": "application",
      "root": "apps/integration",
      "entryFile": "main",
      "sourceRoot": "apps/integration/src",
      "compilerOptions": {
        "tsConfigPath": "apps/integration/tsconfig.app.json"
      }
    },
    "raha-send-backend": {
      "type": "application",
      "root": "apps/raha-send-backend",
      "entryFile": "main",
      "sourceRoot": "apps/raha-send-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/raha-send-backend/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}