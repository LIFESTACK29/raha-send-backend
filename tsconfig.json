{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/paystack": [
        "libs/paystack/src"
      ],
      "@app/paystack/*": [
        "libs/paystack/src/*"
      ],
      "@app/address": [
        "libs/address/src"
      ],
      "@app/address/*": [
        "libs/address/src/*"
      ],
      "@app/wallet": [
        "libs/wallet/src"
      ],
      "@app/wallet/*": [
        "libs/wallet/src/*"
      ],
      "@app/shipment": [
        "libs/shipment/src"
      ],
      "@app/shipment/*": [
        "libs/shipment/src/*"
      ],
      "@app/rider": [
        "libs/rider/src"
      ],
      "@app/rider/*": [
        "libs/rider/src/*"
      ]
    }
  }
}